{
  "name": "@likhaeditor/ui",
  "version": "0.0.1",
  "description": "UI components for Likha editor",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "editor",
    "ui",
    "toolbar",
    "components"
  ],
  "author": "Shiv Singh <shiv@srapsware.com> (https://github.com/ProgrammerNomad)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProgrammerNomad/likhaeditor.git",
    "directory": "packages/ui"
  },
  "homepage": "https://github.com/ProgrammerNomad/likhaeditor#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@likhaeditor/core": "^0.0.1",
    "lucide": "^0.294.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
