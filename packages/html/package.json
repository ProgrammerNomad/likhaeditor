{
  "name": "@likhaeditor/likhaeditor",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style.css": "./dist/likha-editor.css"
  },
  "files": [
    "dist"
  ],
  "description": "Vanilla JavaScript wrapper for Likha editor - works without build tools",
  "keywords": [
    "editor",
    "rich-text",
    "wysiwyg",
    "html",
    "javascript",
    "vanilla-js"
  ],
  "author": "Shiv Singh <shiv@srapsware.com> (https://github.com/ProgrammerNomad)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProgrammerNomad/likhaeditor.git",
    "directory": "packages/html"
  },
  "homepage": "https://github.com/ProgrammerNomad/likhaeditor#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly && node -e \"require('fs').copyFileSync('src/likha-editor.css', 'dist/likha-editor.css')\""
  },
  "dependencies": {
    "@likhaeditor/core": "^0.0.1",
    "@likhaeditor/plugins": "^0.0.1",
    "@likhaeditor/ui": "^0.0.1",
    "prosemirror-commands": "^1.5.2",
    "prosemirror-history": "^1.3.2",
    "prosemirror-inputrules": "^1.5.1",
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-model": "^1.19.4",
    "prosemirror-schema-basic": "^1.2.2",
    "prosemirror-schema-list": "^1.5.1",
    "prosemirror-state": "^1.4.3",
    "prosemirror-transform": "^1.8.0",
    "prosemirror-view": "^1.32.7"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vite": "^5.4.0"
  }
}